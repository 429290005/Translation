<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <TextView
            android:id="@+id/tv_content"
            android:padding="@dimen/dp_10"
            android:drawableLeft="@drawable/ic_rate_review"
            android:drawablePadding="@dimen/dp_10"
            android:text="复习次数：12次"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    <TextView
            android:id="@+id/tv_zw"
            app:layout_constraintTop_toBottomOf="@+id/tv_content"
            android:padding="@dimen/dp_10"
            android:text="掌握词数：12个"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@drawable/ic_sentiment_satisfied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    <TextView
            android:id="@+id/tv_jc"
            app:layout_constraintTop_toBottomOf="@+id/tv_zw"
            android:padding="@dimen/dp_10"
            android:text="坚持使用：12天"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@drawable/ic_timelapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

</android.support.constraint.ConstraintLayout>