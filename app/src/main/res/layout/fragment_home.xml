<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dp_20"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <TextView
            android:id="@+id/tv_notify"
            android:textSize="@dimen/sp_22"
            android:text="今天要复习"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/color2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <com.fire.translation.view.NotifyTextView
            android:id="@+id/nv_review"
            app:layout_constraintTop_toBottomOf="@id/tv_notify"
            app:leftColor="@color/color4"
            app:rightColor="@color/colordefault"
            app:leftSize="@dimen/sp_40"
            app:rightSize="@dimen/sp_6"
            app:leftText="90"
            app:rightText="词"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            />

    <LinearLayout
            android:id="@+id/layout_first"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/nv_review"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:text="解锁次数"
                   style="@style/textStyleOne"
                    />
            <com.fire.translation.view.NotifyTextView
                    android:id="@+id/nv_jsnum"
                    app:layout_constraintTop_toBottomOf="@id/tv_notify"
                    style="@style/NotifyProStyle"
                    />
        </LinearLayout>
        <TextView
                android:background="@color/colordefault"
                android:layout_width="1px"
                android:layout_height="match_parent"
                />
        <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:text="坚持使用"
                    style="@style/textStyleOne"
                    />
            <com.fire.translation.view.NotifyTextView
                    android:id="@+id/nv_jcnum"
                    app:layout_constraintTop_toBottomOf="@id/tv_notify"
                    style="@style/NotifyProStyle"
                    />
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/tv_middle"
            app:layout_constraintTop_toBottomOf="@id/layout_first"
            android:background="@color/colordefault"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="1px"
            />
    <LinearLayout
            android:id="@+id/layout_second"
            app:layout_constraintTop_toBottomOf="@id/tv_middle"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:id="@+id/tv_type"
                    android:text="四级核心"
                    style="@style/textStyleOne"
                    />
            <com.fire.translation.view.NotifyTextView
                    android:id="@+id/nvtype"
                    app:layout_constraintTop_toBottomOf="@id/tv_notify"
                    style="@style/NotifyProStyle"
                    />
        </LinearLayout>
        <TextView
                android:background="@color/colordefault"
                android:layout_width="1px"
                android:layout_height="match_parent"
                />
        <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:text="掌握词数"
                    style="@style/textStyleOne"
                    />
            <com.fire.translation.view.NotifyTextView
                    android:id="@+id/nvzwnum"
                    app:layout_constraintTop_toBottomOf="@id/tv_notify"
                    style="@style/NotifyProStyle"
                    />
        </LinearLayout>
    </LinearLayout>

    <Button
            android:id="@+id/btn_start"
            android:text="开始复习"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"
            android:background="@drawable/select_one"
            android:layout_margin="@dimen/dp_30"
            app:layout_constraintTop_toBottomOf="@+id/layout_second"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
</android.support.constraint.ConstraintLayout>