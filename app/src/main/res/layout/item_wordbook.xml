<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="left"
            android:text="match_parent"
            android:textColor="@color/color4"
            android:textSize="@dimen/sp_30"
            />

    <TextView
            android:id="@+id/tv_ps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_volume_up"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="[stif]"
            />
    <LinearLayout
            android:id="@+id/layout_show"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <CheckBox
                android:id="@+id/cb_spread"
                android:text="展开"
                android:checked="false"
                android:textColor="@color/color2"

                android:button="@null"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <ImageView
                android:id="@+id/iv_star"
                app:srcCompat="@drawable/ic_arrow_drop_down_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_second"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
                android:id="@+id/tv_interpretation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:lineSpacingExtra="@dimen/dp_6"
                android:text="n.  名字, 名称, 姓名, 名誉\nvt.  命名, 提名, 叫出, 指定\nadj.  姓名的, 据以取名的"
                />

        <TextView
                android:id="@+id/tv_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Please erase my name from the list."
                />

        <TextView
                android:id="@+id/tv_cn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:text="请把我的名字从名单上擦去。"
                />
    </LinearLayout>
</LinearLayout>