<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_fileName="AndroidWave.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    <FrameLayout
            android:layout_margin="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <com.fire.translation.view.CountDownView
                android:id="@+id/view_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cd_animator_time="5"
                app:cd_animator_time_unit="S"
                app:cd_arc_color="#107fbf"
                app:cd_arc_width="1.5dp"
                app:cd_bg_color="@color/color9"
                app:cd_circle_radius="23dp"
                app:cd_location="left"
                app:cd_retreat_type="forward"
                app:cd_text_color="#107fbf"
                app:cd_text_size="12sp"
                />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>